0000000000000000000000000000000000000000;;	  while true; do
0000000000000000000000000000000000000000;;	    master=$(redis-cli -h ${REDIS_SENTINEL_SERVICE_HOST} -p ${REDIS_SENTINEL_SERVICE_PORT} --csv SENTINEL get-master-addr-by-name mymaster | tr ',' ' ' | cut -d' ' -f1)
0000000000000000000000000000000000000000;;	    if [[ -n ${master} ]]; then
0000000000000000000000000000000000000000;;	      master="${master//\"}"
0000000000000000000000000000000000000000;;	    else
0000000000000000000000000000000000000000;;	      master=$(hostname -i)
0000000000000000000000000000000000000000;;	    fi
0000000000000000000000000000000000000000;;	
