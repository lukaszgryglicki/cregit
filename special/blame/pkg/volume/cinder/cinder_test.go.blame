0000000000000000000000000000000000000000;;		globalPath := makeGlobalPDName(c.plugin.host, c.pdName)
0000000000000000000000000000000000000000;;		fakeDeviceName := getFakeDeviceName(c.plugin.host, c.pdName)
0000000000000000000000000000000000000000;;		// unmount the bind-mount - should be fast
